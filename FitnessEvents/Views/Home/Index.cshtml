@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<div class="mainhead">
    <h1><b>Fitness Events4All</b></h1>
    <p class="lead">
        Fitness Events4All is an open source form where people from different parts of the world can add fitness events details such as
        marathon, cycling, open gym events, sporting events etc. We love to keep the people fit and healthy so we need you to spread the world for a
        better healthy world!!!!
    </p>
</div>


    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/img/1.jpg" alt="Los Angeles" style="width:100%;">
                   
                </div>

                <div class="item">
                    <img src="~/img/health.jpg" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/img/cycl.jpg" alt="New york" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

     <div class="row">
         <div class="col-md-12 headercenter">
             <h2><b>Join us</b></h2>
             <img src="~/img/join.png" />
             <p><b>Join us and be a part of a fitness world, explore events and add events around you!!!!</b></p>
             <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-large btn-block">Join Us</a>
         </div>
        </div>

    <div class="row">
        <div class="col-md-12 headercenter">
            <h2><b>Find Fitness Events</b></h2>
            <img src="~/img/cycl.jpg" style="width:40%;"/>
            <p><b>There are plenty of fitness events happening around you. Find out event details here!!!!</b></p>
            <a href="@Url.Action("Index", "FitnessEvents")" class="btn btn-primary btn-large btn-block">View Events</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 headercenter">
            <h2><b>Add Fitness Events</b></h2>
            <img src="~/img/add-list.png" style="width:20%;" />
            <p><b>If you know any health & fitness events login and add here</b></p>
            <a href="@Url.Action("Create", "FitnessEvents")" class="btn btn-primary btn-large btn-block">Add Events</a>
        </div>
    </div>
    
        <br /><br /><br /><br /><br /><br />

        <div class="row">


            <h2 class="headercenter"><img src="~/img/Mapma.JPG" style="width:70%;"/></h2>
            <h2 class="headercenter"><b>Register with us and add events on map</b></h2>


            <a href="@Url.Action("EventLocation", "Home")" class="btn btn-primary btn-large btn-block">Add events on map</a>

        </div>

        <br /><br /><br /><br /><br /><br />

        <div class="row">

            <h2 class="headercenter"><img src="~/img/navigate.jpg" style="width:40%;" /></h2>
            <h2 class="headercenter"><b>Find distance to the event location from your location on map</b></h2>

            <a href="@Url.Action("NavigationMap", "Home")" class="btn btn-primary btn-large btn-block">Find</a>

        </div>

